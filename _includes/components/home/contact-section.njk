<section class="contact-section">
  <div class="contact-header">
    <p class="contact-subtitle">We'd Love to Hear From You</p>
    <h2 class="contact-title">Contact us</h2>
  </div>
  <div class="contact-form-container">
    <form class="contact-form">
      <div class="form-group">
        <label class="form-label">Name, Lastname:</label>
        <input type="text" class="form-input" placeholder="Name"/>
      </div>
      <div class="form-group">
        <label class="form-label">Phone:
          <span class="optional">(Optional)</span>
        </label>
        <input type="tel" class="form-input" placeholder="+993"/>
      </div>
      <div class="form-group">
        <label class="form-label">Email:</label>
        <input type="email" class="form-input" placeholder="address@mail.com"/>
      </div>
      <div class="form-group">
        <label class="form-label">Message:</label>
        <textarea class="form-textarea" placeholder="Text"></textarea>
      </div>
      {% set buttonText = "Send message" %}
      {% set buttonVariant = "primary" %}
      {% include "components/shared/button.njk" %}
    </form>
  </div>
</section>