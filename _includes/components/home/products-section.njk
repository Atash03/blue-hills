    <div class="products-grid">
      {% set title = "Copy Paper" %}
      {% set description = "Ideal for office, academic, and professional use" %}
      {% set additionalClass = "home-product-card" %}
      {% set filterId = "paper" %}
      {% set gradientId = "paper" %}
